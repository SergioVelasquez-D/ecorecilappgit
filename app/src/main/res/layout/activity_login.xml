<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondonaturaleza"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/Logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/adamina"
        android:text="ECORECICLA"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.112" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="346dp"
        android:layout_height="499dp"
        android:background="#80FFE680"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Logo"
        app:layout_constraintVertical_bias="0.43">


        <!-- Campo de email con fondo transparente y línea inferior -->
        <LinearLayout
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <EditText
                style="@style/TransparentEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo electronico:"
                android:inputType="textEmailAddress"
                android:padding="14dp"
                android:textColorHint="#463535" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000" /> <!-- Cambia el color de la línea según tu preferencia -->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:padding="8dp">

            <EditText
                style="@style/TransparentEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contraseña:"
                android:inputType="textPassword"
                android:padding="14dp"
                android:textColor="#000000"
                android:textColorHint="#463535" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000" /> <!-- Cambia el color de la línea según tu preferencia -->
        </LinearLayout>

        <!-- Botón de inicio de sesión -->
        <Button
            android:id="@+id/InicioButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#ABC837"
            android:text="Inicio"
            android:textColor="#463535"
            android:textSize="18sp"
            android:translationY="20dp" />

        <Button
            android:id="@+id/forgetPasswordButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"
            android:background="#00FFFFFF"
            android:text="¿Olvidaste tu contraseña?"
            android:textColor="#463535"
            android:textSize="18sp"
            android:translationY="20dp" />

        <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#ABC837"
            android:text="Registrarse"
            android:textColor="#463535"
            android:textSize="18sp"
            android:translationY="20dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>